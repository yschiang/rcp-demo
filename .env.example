# Environment Configuration
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration
DB_URL=sqlite+aiosqlite:///./strategy_system.db
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30


# API Configuration
API_TITLE=Wafer Sampling Strategy System
API_DESCRIPTION=API for managing wafer sampling strategies
API_VERSION=1.0.0
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json

# CORS Settings
API_ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]
API_ALLOW_CREDENTIALS=true
API_ALLOW_METHODS=["*"]
API_ALLOW_HEADERS=["*"]

# Plugin Configuration
PLUGIN_AUTO_DISCOVER_PLUGINS=true
PLUGIN_TIMEOUT=30
PLUGIN_MAX_PLUGIN_MEMORY=100

# Storage Configuration
STORAGE_STRATEGY_STORAGE_PATH=./data/strategies
STORAGE_SIMULATION_CACHE_PATH=./data/cache
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_FILE_TYPES=[".yaml", ".yml", ".json", ".xlsx"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoring Configuration
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PORT=8001
MONITORING_HEALTH_CHECK_INTERVAL=30
MONITORING_ENABLE_TRACING=false
MONITORING_JAEGER_ENDPOINT=

# Vendor Configuration
VENDOR_DEFAULT_TIMEOUT=30
VENDOR_RETRY_ATTEMPTS=3

# ASML Vendor Settings
VENDOR_ASML_CONFIG={}

# KLA Vendor Settings
VENDOR_KLA_CONFIG={}